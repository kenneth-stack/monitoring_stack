{
  "dashboard": {
    "id": null,
    "title": "AlertManager Overview",
    "tags": ["alertmanager", "alerts"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "AlertManager Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"alertmanager\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Active Alerts",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(ALERTS{alertstate=\"firing\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Pending Alerts",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(ALERTS{alertstate=\"pending\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "orange", "value": 3}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Notifications Sent",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(alertmanager_notifications_total[1h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Alert Trends",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(ALERTS{alertstate=\"firing\"})",
            "refId": "A",
            "legendFormat": "Firing"
          },
          {
            "expr": "sum(ALERTS{alertstate=\"pending\"})",
            "refId": "B",
            "legendFormat": "Pending"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Notification Success Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(alertmanager_notifications_total[5m])",
            "refId": "A",
            "legendFormat": "Total Notifications"
          },
          {
            "expr": "rate(alertmanager_notifications_failed_total[5m])",
            "refId": "B",
            "legendFormat": "Failed Notifications"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Current Active Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "alertstate": true},
              "renameByName": {"alertname": "Alert Name", "instance": "Instance", "severity": "Severity"}
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Severity"},
              "properties": [
                {
                  "id": "mappings",
                  "value": [
                    {"options": {"critical": {"text": "CRITICAL", "color": "red"}}, "type": "value"},
                    {"options": {"warning": {"text": "WARNING", "color": "yellow"}}, "type": "value"},
                    {"options": {"info": {"text": "INFO", "color": "blue"}}, "type": "value"}
                  ]
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1
  }
}